rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Allow public read access for the entire products collection
    match /products/{document=**} {
      allow read: if true;
    }

    // Restrict write access on the products collection to authenticated users
    match /products/{productId} {
      allow write: if request.auth != null;
    }
  }
}

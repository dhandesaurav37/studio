
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Default rule: allow public read access, but only allow authenticated users to write.
    // This will allow your app to read the 'products' collection without errors.
    match /{document=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }
  }
}

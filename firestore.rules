
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Allow public read access to products, but only authenticated users can write.
    match /products/{productId} {
      allow read: if true;
      allow write: if request.auth != null;
    }

    // Users can only manage their own data in other collections.
    // This is a placeholder for future collections like user profiles or orders.
    match /users/{userId}/{document=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Fallback for any other collection - deny all access.
    match /{document=**} {
      allow read, write: if false;
    }
  }
}


rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    match /products/{productId} {
      // Anyone can read (view) products
      allow read: if true;
      // Only authenticated users can write (create, update, delete) products
      allow write: if request.auth != null;
    }

    // This rule is crucial: it allows listing the entire products collection
    match /products/{document=**} {
      allow read: if true;
    }
  }
}


rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Products can be read by anyone, but only created, updated, or deleted
    // by authenticated users (admins). A more secure rule would check for a
    // specific admin role.
    match /products/{productId} {
      allow read: if true;
      allow write: if request.auth != null;
    }
  }
}

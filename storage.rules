rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Product images are public
    match /product-images/{imageId} {
      allow read: if true;
      allow write: if request.auth != null;
    }

    // Reels are public to read, but only admins can write
    match /reels/{reelId} {
      allow read: if true;
      allow write: if request.auth != null;
    }
  }
}
